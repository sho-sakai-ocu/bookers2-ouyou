<div class = "mt-3">
 <h4>投稿の前日比・前週比</h4>
 <table class="table table-bordered">
  <thead>
   <tr>
    <th>今日の投稿数</th>
    <th>前日の投稿数</th>
    <th>前日比</th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= @today_books.count %></td>
     <td><%= @yesterday_books.count %></td>
     <td>
     <% if @yesterday_books.count == 0 %>
      前日の投稿はありません
     <% else %>
      <% @the_day_before_ratio =   @today_books.count / @yesterday_books.count.to_f  %>
      <%= (@the_day_before_ratio * 100).round %>%
     <% end %>
    </td>
   </tr>
  </tbody>
 </table>
 <table class="table table-bordered">
  <thead>
   <tr>
    <th>今週の投稿数</th>
    <th>前週の投稿数</th>
    <th>前週比</th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= @this_week_books.count %></td>
     <td><%= @last_week_books.count %></td>
     <td>
     <% if @last_week_books.count == 0 %>
      前週の投稿はありません
     <% else %>
      <% @last_week_ratio =   @this_week_books.count / @last_week_books.count.to_f  %>
      <%= (@last_week_ratio * 100).round %>%
     <% end %>
    </td>
   </tr>
  </tbody>
 </table>
</div>

<div class = "mt-3">
 <h4>7日間分の投稿数</h4>
 <table class="table table-bordered">
  <thead>
   <tr>
    <th>6日前</th>
    <th>5日前</th>
    <th>4日前</th>
    <th>3日前</th>
    <th>2日前</th>
    <th>1日前</th>
    <th>今日</th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= @books.created_6days_ago.count %></td>
     <td><%= @books.created_5days_ago.count %></td>
     <td><%= @books.created_4days_ago.count %></td>
     <td><%= @books.created_3days_ago.count %></td>
     <td><%= @books.created_2days_ago.count %></td>
     <td><%= @books.created_yesterday.count %></td>
     <td><%= @books.created_today.count %></td>
   </tr>
  </tbody>
 </table>
 <canvas class="mt-3" id="chart"></canvas>
 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    $(document).on('turbolinks:load', function() {
      var ctx = document.getElementById('chart');
      var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [{
                label: '投稿した本の数',
                data: [<%= @books.created_6days_ago.count %>,
                       <%= @books.created_5days_ago.count %>,
                       <%= @books.created_4days_ago.count %>,
                       <%= @books.created_3days_ago.count %>,
                       <%= @books.created_2days_ago.count %>,
                       <%= @books.created_yesterday.count %>,
                       <%= @books.created_today.count %>],
                borderColor: "rgba(0,0,255,1)",
                backgroundColor: "rgba(0,0,0,0)",
                tension: 0.4
            }]
        },
        options: {
          scales: {
            y:{
              suggestedMin: 0,
              suggestedMax: 10
            },
            x:{
              stacked: true
            },
          },
        }
      });
    });
  </script>

  <%= form_with url: user_path(@user),local: false, method: :get do |f| %>
    <%= f.date_field :created_at %>
    <%= f.submit "検索" %>
  <% end %>

  <div id="search_result">
    <% if @search_books.present? %>
      <%= render 'users/search', search_books: @search_books %>
    <% end %>
  </div>

</div>